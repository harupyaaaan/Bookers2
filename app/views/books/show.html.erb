<div class="container">
  <div class="row">
    <div class="col-md-3">


<%= render 'books/list', user: @user, book: @books %>
</div>
<div class="col-md-8 offset-md-1">



<h1>Book detail</h1>
<table class="table">
  		  <tbody>
  		      <td>
  		        <%= link_to user_path(@user) do %>
  		        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
  		        <%= @book.user.name %>
  		        <% end %>
  		      </td>
  		      <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <td>
             <% if @book.user == current_user %>
             <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", destroy_book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => '本当に消しますか？' %></td>
            <% end %>
        </tr>
      </tbody>
      </table>
   </div>
  </div>
</div>